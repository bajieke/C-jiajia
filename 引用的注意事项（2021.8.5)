#include<iostream>
using namespace std;

int main()
{
	int a = 10;
	int b = 20;
	//int& c;  //错误，引用必须初始化

	int& c = a;

	cout << "a=" << a << endl;
	cout << "b=" << b << endl;
	cout << "c=" << c << endl;

	c = b; //赋值，不是引用

	cout << "a=" << a << endl;
	cout << "b=" << b << endl;
	cout << "c=" << c << endl;

	system("pause");
	return 0;
}
