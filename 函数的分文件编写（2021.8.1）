//函数的分文件.cpp----------------------------------------------
#include<iostream>
using namespace std;
#include"swap.h"

int main()
{
	int a = 100, b = 99;

	cout << "a=" << a << " b=" << b << endl;

	swap(a, b);

	cout << "a=" << a << " b=" << b << endl;

	return 0;
}



//swap.h-------------------------------------------------------
#include<iostream>
using namespace std;

void swap(int x,int y);


//swap.cpp------------------------------------------------------
#include"swap.h"

void swap(int x,int y)
{
  int temp=x;
  x = y;
  y = temp;
  
  cout<<" x =" << x << "  y =" << y <<endl;
}


